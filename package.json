{
  "name": "react-ddd",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@craco/craco": "^6.1.1",
    "axios": "^0.21.1",
    "craco-alias": "^2.2.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-hook-form": "^6.15.4",
    "react-input-mask": "^2.0.4",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.2",
    "react-toastify": "^7.0.3",
    "web-vitals": "^1.0.1",
    "yup": "^0.32.9"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "test:cov": "craco test --coverage --watchAll",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@tailwindcss/postcss7-compat": "^2.0.3",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/react-hooks": "^5.0.3",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.1",
    "@types/react-dom": "^17.0.0",
    "@types/react-input-mask": "^3.0.0",
    "@types/react-router-dom": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "autoprefixer": "^9",
    "eslint": "7.11.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4",
    "msw": "^0.26.2",
    "postcss": "^7",
    "prettier": "^2.2.1",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat",
    "typescript": "^4.1.3"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.spec.{ts,tsx}"
    ],
    "moduleNameMapper": {
      "@/(.*)": "<rootDir>/src/$1"
    },
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0
      }
    },
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{ts,tsx}",
      "!<rootDir>/src/**/dtos/*",
      "!<rootDir>/src/**/models/*",
      "!<rootDir>/src/**/fakes/*",
      "!<rootDir>/src/**/*.d.ts",
      "!<rootDir>/src/modules/**/usecases/index.ts",
      "!<rootDir>/src/shared/infra/cache/index.ts",
      "!<rootDir>/src/shared/core/*.ts",
      "!<rootDir>/src/shared/infra/httpClient/index.ts",
      "!<rootDir>/src/shared/infra/routes/*",
      "!<rootDir>/src/shared/presentation/App.tsx",
      "!<rootDir>/src/**/hooks/context/index.tsx",
      "!<rootDir>/src/assets/**/*",
      "!<rootDir>/src/index.tsx",
      "!<rootDir>/src/**/styles.ts",
      "!<rootDir>/src/**/__tests__/builders/*",
      "!<rootDir>/src/**/domain/usecases/*",
      "!<rootDir>/src/**/constants/*",
      "!<rootDir>/src/**/routes/*"
    ]
  }
}
